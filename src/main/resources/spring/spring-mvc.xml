    <!--<property name="maxInMemorySize" value="4048"/>-->
    <!--<property name="defaultEncoding" value="utf-8"/>-->
    <!--&lt;!&ndash;上传限制大小，-1无限制&ndash;&gt;-->
    <!--<property name="maxUploadSize" value="-1"/>-->
    <!--</bean>-->


</beans>